<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.hm.HomeFragment"
    android:padding="@dimen/farhgment_home_padding">

    <TextView
        android:id="@+id/tvTittleHomeFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvTittleHomeFragment_text"
        android:textSize="@dimen/tvTittleUserNameHomeFragment_textSize"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

   <TextView
        android:id="@+id/tvTittleUserNameHomeFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Usuario"
        android:textSize="@dimen/tvTittleUserNameHomeFragment_textSize"
        />

    <TextView
        android:id="@+id/tvTittleNews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/rvNews_mtop"
        android:text="@string/tvTittleNews_text"
        android:textSize="@dimen/tvTittleNews_textSize"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvNews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvTittleHomeFragment"
        android:layout_marginTop="@dimen/rvNewsmaringtop"
        >
    </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>
