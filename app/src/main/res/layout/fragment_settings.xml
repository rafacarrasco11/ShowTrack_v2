<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.prf.profile.settings.SettingsFragment" >
    <!--        SettingsFragment        -->

    <LinearLayout
        android:id="@+id/containerLLSettingsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/llEditAvatarSettingsFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgEditAvatarSettingsFragment"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                tools:src="@drawable/user_avatar_preview" />

            <TextView
                android:id="@+id/tvTittleEditAvatarSettingsFragment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="Foto de perfil"
                android:textSize="14sp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llEditNameSettingsFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextNameSettingsFragment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:ems="30"
                android:inputType="text"
                android:hint="Nombre"
                android:textSize="14sp"
                android:textColorHint="@color/black"
                />
            <Button
                android:id="@+id/btnChangeNameSettingsFragment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="Cambiar"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textAllCaps="false"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llEditPasswordSettingsFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextPasswordSettingsFragment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:ems="30"
                android:inputType="text"
                android:hint="ContraseÃ±a"
                android:textSize="14sp"
                android:textColorHint="@color/black"
                />
            <Button
                android:id="@+id/btnChangePasswordSettingsFragment"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:text="Cambiar"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:textAllCaps="false"

                />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/llSpLanguageSettingsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="horizontal">
        <Spinner
            android:tooltipText="Cambiar Idioma"
            android:id="@+id/spinnerLanguageSettingsFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp"/>

    </LinearLayout>




    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBottomButtonsSettingsFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btngoAboutUsProfileFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="@string/btngoAboutUsProfileFragment_text"
            android:textColor="@color/black"
            android:textAllCaps="false"
            android:textSize="14sp"/>

        <Button
            android:id="@+id/btnDeleteAccountProfileFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="@string/btnDeleteAccountProfileFragment_text"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@android:color/holo_red_dark" />

        <Button
            android:id="@+id/btnLogOutProfileFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="@string/btnLogOutProfileFragment_text"
            android:textAllCaps="false"
            android:textSize="14sp"
            android:textColor="@android:color/holo_red_dark"  />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>